<UserControl x:Class="Lims.WPF.Resources.UserControls.SamplesViewBaseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lims.WPF.Resources.UserControls"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             mc:Ignorable="d">
    <Grid>
        <StackPanel DockPanel.Dock="Left"
                    Orientation="Horizontal">
            <dxe:DateEdit EditValue="{Binding Sample_BeginDate,Mode=TwoWay}"
                          ToolTip="起始下单日期"
                          ShowBorder="False"
                          Name="Sample_BeginDate">               
            </dxe:DateEdit>
            <Label Content="—" VerticalAlignment="Center" />
            <dxe:DateEdit EditValue="{Binding Sample_EndDate,Mode=TwoWay}"
                          ShowBorder="False"
                          ToolTip="终止下单日期"
                          Name="Sample_EndDate">                
            </dxe:DateEdit>
        </StackPanel>
    </Grid>
</UserControl>