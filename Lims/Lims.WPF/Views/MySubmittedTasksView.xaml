<UserControl
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    x:Class="Lims.WPF.Views.MySubmittedTasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Lims.WPF.ViewModels"
    xmlns:dxdiagt="http://schemas.devexpress.com/winfx/2008/xaml/diagram/themekeys"
    xmlns:export="clr-namespace:Lims.WPF.Resources.UserControls.Export"
    d:DataContext="{d:DesignInstance viewModels:MySubmittedTasksViewModel}"
    xmlns:mycontrols="clr-namespace:Lims.WPF.Resources.UserControls"
    Name="MySubmittedTasksUserControl"
    mc:Ignorable="d">
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand
            EventName="KeyUp"
            Command="{Binding DocumentKeyUpCommand}"
            PassEventArgsToCommand="True" />
    </dxmvvm:Interaction.Behaviors>
    <UserControl.Resources>
        <dxb:PopupMenu
            x:Key="sampleViewPopupMenu">
            <dxb:BarButtonItem
                Style="{StaticResource RefreshSampleDatasButtonStyle}" />
            <dxb:BarButtonItem
                Style="{StaticResource SearchByCurrentCellValueButtonStyle}" />
            <dxb:BarCheckItem
                Style="{StaticResource OnlyViewUrgentButtonStyle}" />
            <dxb:BarButtonItem
                Style="{StaticResource PrintSelectedSamplesButtonStyle}" />
            <dxb:BarButtonItem
                Style="{StaticResource ExportSelectedSamplesButtonStyle}" />
            <dxb:BarButtonItem
                Style="{StaticResource ShowMoistureContentAndDensityButtonStyle}">
            </dxb:BarButtonItem>
        </dxb:PopupMenu>
        <dxb:PopupMenu
            x:Key="tasklistViewPopuMenu">
            <dxb:PopupMenu.Items>
                <dxb:BarButtonItem
                    Style="{StaticResource RefreshSampleDatasButtonStyle}" />
                <dxb:BarButtonItem
                    Style="{StaticResource SearchByCurrentCellValueButtonStyle}" />
                <dxb:BarCheckItem
                    Style="{StaticResource OnlyViewUrgentButtonStyle}" />
                <dxb:BarButtonItem
                    ToolTip="打印勾选项"
                    Content="打印勾选项"
                    KeyGesture="F8"
                    IsEnabled="{Binding SelectedTaskDatas.Count}"
                    Glyph="{dx:DXImage 'Images/Print/PrintArea_16x16.png'}"
                    Command="{Binding PrintTableViewCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxb:PopupMenu}, Path=PlacementTarget}" />
                <dxb:BarButtonItem
                    Content="导出到excel"
                    IsEnabled="{Binding SelectedTaskDatas.Count}"
                    Glyph="{dx:DXImage 'Images/Export/ExportToXLSX_32x32.png'}"
                    Command="{DXCommand '$export:DemoModuleExportHelper.ExportToXlsx(@parameter)'}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxb:PopupMenu}, Path=PlacementTarget}" />
                <dxb:BarButtonItem
                    IsEnabled="{Binding SelectedTaskDatas.Count}"
                    Command="{Binding MultiEditTestDateCommand}"
                    CommandParameter="{Binding SelectedTaskDatas}"
                    Glyph="{dx:DXImage 'Images/Conditional Formatting/ADateOccurring_16x16.png'}"
                    Content="同步检测日期"
                    ToolTip="同步检测日期" />
                <dxb:BarButtonItem
                    IsEnabled="{Binding SelectedTaskDatas.Count}"
                    Command="{Binding MarkTaskListOriginalRecordCommand}"
                    Glyph="{dx:DXImage 'Images/Conditional Formatting/IconSetFlags3_16x16.png'}"
                    Content="标记原始记录完成状态"
                    ToolTip="标记原始记录完成状态" />
                <dxb:BarButtonItem
                    IsEnabled="{Binding SelectedTaskDatas.Count}"
                    Command="{Binding TaskList_PrintOriginalRecordCommand}"
                    CommandParameter="{Binding SelectedTaskDatas}"
                    Glyph="{dx:DXImage 'Images/Print/Printer_16x16.png'}"
                    Content="打印原始记录"
                    ToolTip="打印原始记录" />
                <dxb:BarButtonItem
                    Content="编辑原始记录模板规则"
                    Glyph="{dx:DXImage 'Images/RichEdit/InsertColumnBreak_16x16.png'}"
                    Command="{Binding OriginalRecordTemplateEditCommand}" />
            </dxb:PopupMenu.Items>
        </dxb:PopupMenu>
        <dxb:PopupMenu
            x:Key="itemViewPopupMenu"
            IsEnabled="{Binding FocusedItem,Converter={StaticResource IsNullToEnableConverter}}">
            <dxb:BarButtonItem
                Content="打印原始记录"
                Glyph="{dx:DXImage 'Images/Print/Printer_16x16.png'}"
                Command="{Binding PrintOriginalRecordCommand}"
                CommandParameter="{Binding FocusedItem}" />
            <dxb:BarButtonItem
                Content="同步检测日期"
                ToolTip="同步检测日期"
                Command="{Binding EditTestDateCommand}"
                CommandParameter="{Binding FocusedItem}"
                Glyph="{dx:DXImage 'Images/Conditional Formatting/ADateOccurring_16x16.png'}" />
            <dxb:BarButtonItem
                Content="撤销提交"
                Command="{Binding CancelSubmitCommand}"
                Glyph="{dx:DXImage 'Images/Actions/Reset_16x16.png'}"
                CommandParameter="{Binding FocusedItem}"
                IsEnabled="{Binding FocusedItem,Converter={StaticResource TestProgressToIsEnableConverter}}" />
            <dxb:BarButtonItem
                Style="{StaticResource RefreshItemDatasButtonStyle}" />

            <dxb:BarButtonItem
                Content="编辑原始记录模板规则"
                Glyph="{dx:DXImage 'Images/RichEdit/InsertColumnBreak_16x16.png'}"
                Command="{Binding OriginalRecordTemplateEditCommand}" />

            <dxb:BarItemSeparator />
        </dxb:PopupMenu>
        <DataTemplate
            x:Key="MarkOriginalRecordTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition
                        Width="3*" />
                </Grid.ColumnDefinitions>

                <dxe:CheckEdit
                    IsChecked="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=RowData.Row.IsOriginalRecordComplete}"
                    HorizontalAlignment="Center"
                    IsReadOnly="True"
                    VerticalAlignment="Center" />
                <dx:SimpleButton
                    Margin="2"
                    Grid.Column="1"
                    Glyph="{Binding Path=RowData.Row.IsOriginalRecordComplete,Converter={StaticResource BooleanToGlyphConverter} , ConverterParameter='pack://application:,,,/DevExpress.Images.v24.2;component/Images/Reports/DeleteHeader_16x16.png|pack://application:,,,/DevExpress.Images.v24.2;component/Images/Tasks/Status_16x16.png'}"
                    Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=RowData.Row.IsOriginalRecordComplete,  Converter={StaticResource BooleanToContentConverter}, ConverterParameter='标记|撤销'}"
                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.MarkOriginalRecordCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=RowData.Row}">
                </dx:SimpleButton>
            </Grid>
        </DataTemplate>
        <DataTemplate
            x:Key="MyItemsInCellTemplate">
            <TextBlock
                Padding="2"
                FontSize="12"
                VerticalAlignment="Center"
                Text="{Binding RowData.Row.Items, Converter={StaticResource MyItemsInCellConverter}, ConverterParameter='>103'}"
                TextWrapping="WrapWithOverflow">
            </TextBlock>
        </DataTemplate>

    </UserControl.Resources>

    <Grid
        Background="{Binding Background, ElementName=ParentWindow}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="36" />
            <RowDefinition
                Height="1.618*" />
            <RowDefinition
                Height="8" />
            <RowDefinition
                Height="{Binding ItemViewHeight, Mode=TwoWay}" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="{Binding SampleViewWidth, Mode=TwoWay}" />
            <ColumnDefinition
                Width="8" />
            <ColumnDefinition
                Width="1*" />
        </Grid.ColumnDefinitions>

        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="3"
            IsEnabled="True"
            HorizontalAlignment="Stretch" />

        <GridSplitter
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Height="3"
            IsEnabled="True"
            HorizontalAlignment="Stretch" />

        <Grid
            Grid.ColumnSpan="3"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <dxe:DateEdit
                    EditValue="{Binding Sample_BeginDate,Mode=TwoWay}"
                    ToolTip="起始提交日期"
                    ShowBorder="False"
                    Name="Sample_BeginDate">
                </dxe:DateEdit>
                <Label
                    Content="—"
                    VerticalAlignment="Center" />
                <dxe:DateEdit
                    EditValue="{Binding Sample_EndDate,Mode=TwoWay}"
                    ShowBorder="False"
                    ToolTip="终止提交日期"
                    Name="Sample_EndDate">
                </dxe:DateEdit>
            </StackPanel>

            <mycontrols:SampleInfoControl
                Grid.Column="1"
                Visibility="{Binding IsFullTaskListView,Converter={dxmvvm:BooleanToVisibilityConverter}}" />
            <DockPanel
                Grid.Column="2"
                HorizontalAlignment="Right">
                <StackPanel
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                    <StackPanel
                        Orientation="Horizontal"
                        IsEnabled="{Binding SelectedTaskDatas.Count}"
                        Visibility="{Binding IsFullTaskListView,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <dxb:ToolBarControl
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding SelectedTaskDatas.Count}"
                            Style="{StaticResource toolBarStyle}"
                            Visibility="{Binding IsFullTaskListView,Converter={StaticResource BooleanToVisibilityConverter}}">
                        </dxb:ToolBarControl>
                    </StackPanel>
                    <mycontrols:LayoutMenu />
                </StackPanel>
            </DockPanel>
        </Grid>


        <dxg:GridControl
            Grid.Row="1"
            Style="{StaticResource SamplesGridControlStyle}">
            <dxg:GridControl.GroupSummary>
                <dxg:GridSummaryItem
                    SummaryType="Count"
                    DisplayFormat="项目数量：0" />
            </dxg:GridControl.GroupSummary>
            <dxg:GridControl.View>
                <dxg:TableView
                    Style="{StaticResource SamplesTableViewStyle}"
                    dxb:BarManager.DXContextMenu="{StaticResource sampleViewPopupMenu}" />
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn
                    Header="原始记录完成率"
                    Fixed="Left"
                    Binding="{Binding RowData.Row.Items, Converter={StaticResource OriginalRecordCompeleteItemsCountConverter}}">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <dxe:ProgressBarEdit
                                Style="{StaticResource ProgressBarEditStyle}"
                                EditValue="{Binding RowData.Row.Items, Converter={StaticResource OriginalRecordCompeleteItemsCountConverter}}">
                                <dxe:ProgressBarEdit.DisplayFormatString>{0:P0}</dxe:ProgressBarEdit.DisplayFormatString>
                            </dxe:ProgressBarEdit>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn
                    FieldName="SampleCode"
                    Header="样品编号"
                    Fixed="Left" />
                <dxg:GridColumn
                    FieldName="SampleName"
                    Header="样品名称"
                    Fixed="Left" />
                <dxg:GridColumn
                    FieldName="IsUrgent"
                    Header="是否加急"
                    Visible="False" />
                <dxg:GridColumn
                    FieldName="TaskType"
                    Header="业务类型" />
                <dxg:GridColumn
                    FieldName="CreateTime"
                    Header="下样时间"
                    Style="{StaticResource GridControlDateTimeColumnStyle}" />
                <dxg:GridColumn
                    FieldName="SampleState"
                    Header="样品状态" />
                <dxg:GridColumn
                    FieldName="SampleRemark"
                    Header="样品备注" />
                <dxg:GridColumn
                    Header="我的项目"
                    Width="280"
                    Binding="{Binding RowData.Row.Items, Converter={StaticResource MyItemsInCellConverter}, ConverterParameter='>103'}" />
                <dxg:GridColumn
                    FieldName="MoistureContent"
                    Header="水分" />
                <dxg:GridColumn
                    FieldName="Density"
                    Header="密度" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>

        <dxg:GridControl
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource TaskListGridControlStyle}">
            <dxg:GridControl.GroupSummary>
                <dxg:GridSummaryItem
                    SummaryType="Count"
                    DisplayFormat="项目数量：0" />
            </dxg:GridControl.GroupSummary>
            <dxg:GridControl.Columns>

                <dxg:GridColumn
                    Header="样品编号"
                    FieldName="SampleCode"
                    Fixed="Left" />
                <dxg:GridColumn
                    Header="样品名称"
                    FieldName="Sample.SampleName"
                    Fixed="Left" />
                <dxg:GridColumn
                    Header="检测项目"
                    FieldName="TestItem"
                    Fixed="Left" />
                <dxg:GridColumn
                    Header="检测结果"
                    Image="{dx:DXImage 'Images/RichEdit/InsertDataField_32x32.png'}"
                    HeaderStyle="{StaticResource ResultColumnHeaderStyle}"
                    FieldName="TestResult" />
                <dxg:GridColumn
                    Header="报告单位"
                    FieldName="ReportUnit"
                    Width="60" />
                <dxg:GridColumn
                    Header="指标要求"
                    FieldName="IndexRequest"
                    Visible="False" />
                <dxg:GridColumn
                    Header="修约规则"
                    FieldName="RoundRule"
                    Visible="False"
                    Width="60" />
                <dxg:GridColumn
                    Header="检测备注"
                    Visible="False"
                    FieldName="TestRemark" />
                <dxg:GridColumn
                    Header="产品剂型/样品状态"
                    FieldName="SampleFormOrState"
                    Width="60" />
                <dxg:GridColumn
                    Header="项目备注"
                    Visible="False"
                    FieldName="ItemRemark" />
                <dxg:GridColumn
                    Header="是否加急"
                    FieldName="Sample.IsUrgent"
                    Visible="False" />
                <dxg:GridColumn
                    Header="业务类型"
                    FieldName="Sample.TaskType"
                    Visible="False"
                    Width="100" />
                <dxg:GridColumn
                    Header="检测进度"
                    FieldName="TestProgress"
                    CellTemplate="{StaticResource TestProgressTemplate}" />
                <!--<dxg:GridColumn Header="分析人" FieldName="Tester"  />-->
                <dxg:GridColumn
                    Header="单项结论"
                    FieldName="SingleConclusion"
                    Visible="False" />
                <dxg:GridColumn
                    Header="检测方法"
                    FieldName="TestMethod"
                    CellTemplate="{StaticResource MethodColumnTemplate}" />
                <dxg:GridColumn
                    Header="执行标准"
                    FieldName="ExecuteStandard"
                    CellTemplate="{StaticResource ExecuteStandardColumnTemplate}" />
                <dxg:GridColumn
                    Header="下单时间"
                    FieldName="AppointTime"
                    Style="{StaticResource GridControlDateTimeColumnStyle}" />
                <dxg:GridColumn
                    Header="检测日期"
                    FieldName="TestDate"
                    Style="{StaticResource GridControlDateColumnStyle}" />
                <dxg:GridColumn
                    Header="结果提交时间"
                    FieldName="ResultSubmitTime"
                    Style="{StaticResource GridControlDateTimeColumnStyle}" />
                <dxg:GridColumn
                    Header="是否为补录"
                    Visible="False"
                    FieldName="IsOverDate" />
                <dxg:GridColumn
                    Header="原始记录是否完成"
                    AllowEditing="False"
                    FieldName="IsOriginalRecordComplete"
                    Width="60">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Canvas
                                Margin="5"
                                Background="{Binding Row.IsOriginalRecordComplete,Converter={StaticResource BooleanToContentConverter},ConverterParameter='Transparent|LimeGreen'}" />
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>
                <dxg:GridColumn
                    Header="产品类别"
                    FieldName="ProductType"
                    Visible="False" />
                <dxg:GridColumn
                    Header="产品等级"
                    FieldName="ProductClass"
                    Visible="False" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView
                    Style="{StaticResource TaskListTableViewStyle}"
                    dxb:BarManager.DXContextMenu="{StaticResource tasklistViewPopuMenu}" />
            </dxg:GridControl.View>
        </dxg:GridControl>



        <DockPanel
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Visibility="{Binding FocusedSample, Converter={StaticResource IsNullToVisibilityConverter}}">
            <mycontrols:SampleInfoControl
                Height="45"
                VerticalAlignment="Center"
                DockPanel.Dock="Top" />
            <dxg:GridControl
                Style="{StaticResource ItemsGridControlStyle}">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        Header="操作"
                        FieldName="IsOriginalRecordComplete"
                        HorizontalHeaderContentAlignment="Center"
                        CellTemplate="{StaticResource MarkOriginalRecordTemplate}"
                        AllowResizing="False"
                        AllowMoving="False"
                        Fixed="Left" />
                    <dxg:GridColumn
                        Header="检测进度"
                        FieldName="TestProgress"
                        Fixed="Left"
                        CellTemplate="{StaticResource TestProgressTemplate}" />
                    <dxg:GridColumn
                        Header="检测项目"
                        FieldName="TestItem"
                        Fixed="Left" />
                    <dxg:GridColumn
                        Header="检测结果"
                        Image="{dx:DXImage 'Images/RichEdit/InsertDataField_32x32.png'}"
                        HeaderStyle="{StaticResource ResultColumnHeaderStyle}"
                        FieldName="TestResult" />
                    <dxg:GridColumn
                        Header="报告单位"
                        FieldName="ReportUnit" />
                    <dxg:GridColumn
                        Header="修约规则"
                        FieldName="RoundRule" />
                    <dxg:GridColumn
                        Header="产品剂型/样品状态"
                        FieldName="SampleFormOrState" />
                    <dxg:GridColumn
                        Header="指标要求"
                        FieldName="IndexRequest"
                        Visible="False" />
                    <dxg:GridColumn
                        Header="单项结论"
                        FieldName="SingleConclusion"
                        Visible="False" />
                    <dxg:GridColumn
                        Header="检测日期"
                        FieldName="TestDate"
                        Style="{StaticResource GridControlDateColumnStyle}" />
                    <dxg:GridColumn
                        Header="提交时间"
                        FieldName="ResultSubmitTime"
                        Style="{StaticResource GridControlDateTimeColumnStyle}" />
                    <dxg:GridColumn
                        Header="检测方法"
                        FieldName="TestMethod"
                        CellTemplate="{StaticResource MethodColumnTemplate}" />
                    <dxg:GridColumn
                        Header="执行标准"
                        FieldName="ExecuteStandard"
                        CellTemplate="{StaticResource ExecuteStandardColumnTemplate}" />
                    <dxg:GridColumn
                        Header="下单时间"
                        FieldName="AppointTime"
                        Style="{StaticResource GridControlDateTimeColumnStyle}" />
                    <dxg:GridColumn
                        Header="项目备注"
                        Visible="False"
                        FieldName="ItemRemark" />
                    <dxg:GridColumn
                        Header="产品类别"
                        FieldName="ProductType" />
                    <dxg:GridColumn
                        Header="产品等级"
                        FieldName="ProductClass" />
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView
                        Style="{StaticResource ItemsTableViewStyle}"
                        dxb:BarManager.DXContextMenu="{StaticResource itemViewPopupMenu}" />
                </dxg:GridControl.View>
            </dxg:GridControl>
        </DockPanel>
    </Grid>
</UserControl>