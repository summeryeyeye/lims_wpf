<UserControl
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    x:Class="Lims.WPF.Views.Dialogs.RetestSampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:local="clr-namespace:Lims.WPF.Views.Dialogs"
    xmlns:mycontrols="clr-namespace:Lims.WPF.Resources.UserControls"
    mc:Ignorable="d"
    Width="1260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="9*" />
        </Grid.RowDefinitions>
        <StackPanel
            DockPanel.Dock="Top"
            Margin="10"
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <TextBlock
                Text="{Binding FocusedSample.SampleCode}"
                FontSize="20"
                Margin="10,0" />
            <TextBlock
                Text="{Binding FocusedSample.SampleName}"
                FontSize="20"
                Margin="10,0" />
        </StackPanel>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="4*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Margin="5">
                <Label
                    Content="该单号所有样品" />
                <ListBox
                    DockPanel.Dock="Left"
                    ItemsSource="{Binding RetestSamples}"
                    DisplayMemberPath="SampleCode"
                    FontSize="16"
                    HorizontalContentAlignment="Center" />
            </StackPanel>

            <StackPanel
                Orientation="Vertical"
                Margin="5"
                Grid.Column="1">
                <Button
                    Content="全部添加"
                    Margin="2"
                    HorizontalAlignment="Right"
                    Command="{Binding AddAllToRetestingItemsCommand}" />
                <ItemsControl
                    ItemsSource="{Binding AllItemsOfFocusedSample}"
                    BorderBrush="Black"
                    BorderThickness="0.2"
                    Height="400"
                    Name="SubItemStandardsView">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.Template>
                        <ControlTemplate
                            TargetType="{x:Type ItemsControl}">
                            <ScrollViewer
                                x:Name="ScrollViewer"
                                Margin="20,0,0,0"
                                DockPanel.Dock="Right"
                                Padding="{TemplateBinding Padding}">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemContainerStyle>
                        <Style>
                            <Setter
                                Property="FrameworkElement.Margin"
                                Value="3" />
                            <Style.Triggers>
                                <Trigger
                                    Property="UIElement.IsMouseOver"
                                    Value="True">
                                    <Setter
                                        Property="FrameworkElement.ToolTip"
                                        Value="{Binding Content.Text, RelativeSource={x:Static RelativeSource.Self}}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Vertical">
                                <!--<CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" />-->
                                <StackPanel
                                    Orientation="Horizontal">
                                    <Button
                                        Content="{Binding TestItem}"
                                        FontSize="16"
                                        Command="{Binding DataContext.AddToRetestingItemsCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}, Mode=FindAncestor}}"
                                        CommandParameter="{Binding}">
                                    </Button>
                                    <TextBlock
                                        Text="{Binding SubItems.Count}"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Center" />
                                </StackPanel>
                                <Canvas
                                    ClipToBounds="True"
                                    Grid.RowSpan="2">
                                    <Border
                                        Canvas.Top="10"
                                        Canvas.Right="-50"
                                        Width="100"
                                        Height="100"
                                        Background="#FFFFFF"
                                        Opacity="0.1"
                                        CornerRadius="100" />
                                    <Border
                                        Canvas.Top="40"
                                        Canvas.Right="-30"
                                        Width="100"
                                        Height="100"
                                        Background="#FFFFFF"
                                        Opacity="0.1"
                                        CornerRadius="100" />
                                    <Border
                                        CornerRadius="5" />
                                </Canvas>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel
                Grid.Column="2"
                Margin="5">
                <Grid>
                    <dxg:GridControl
                        Name="RetestItemsGrid"
                        Height="400"
                        SelectionMode="MultipleRow"
                        ItemsSource="{Binding RetestingItems,Mode=TwoWay}">
                        <dxg:GridControl.View>
                            <dxg:TableView
                                Name="RetestItemsView"
                                ShowSearchPanelMode="Never"
                                ShowGroupPanel="False"
                                SelectedRowsSource="{Binding SelectedRetestingItems,Mode=TwoWay}"
                                Style="{StaticResource TaskListTableViewStyle}">
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EventToCommand
                                        Command="{Binding PreviewRetestItemsKeyUpCommand}"
                                        PassEventArgsToCommand="True"
                                        EventName="KeyUp" />
                                </dxmvvm:Interaction.Behaviors>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn
                                Header="检测项目"
                                FieldName="TestItem" />
                            <dxg:GridColumn
                                Header="检测方法"
                                FieldName="TestMethod" />
                            <dxg:GridColumn
                                Header="检测结果"
                                Image="{dx:DXImage 'Images/RichEdit/InsertDataField_32x32.png'}"
                                HeaderStyle="{StaticResource ResultColumnHeaderStyle}"
                                FieldName="Temp_TestResult" />
                            <dxg:GridColumn
                                Header="指标要求"
                                FieldName="IndexRequest" />
                            <dxg:GridColumn
                                Header="单项结论"
                                FieldName="SingleConclusion" />
                            <dxg:GridColumn
                                Header="项目备注"
                                Visible="False"
                                FieldName="ItemRemark" />
                        </dxg:GridControl.Columns>
                    </dxg:GridControl>
                </Grid>

                <DockPanel
                    Margin="0,20">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                        <Label
                            Content="是否加急:"
                            Foreground="{Binding IsRetestUrgent, Converter={StaticResource BooleanToColorConverter},ConverterParameter='Red|Black'}" />
                        <dxe:CheckEdit
                            IsChecked="{Binding IsRetestUrgent,Mode=TwoWay}"
                            HorizontalAlignment="Left"
                            Margin="5,2"
                            Background="White" />
                    </StackPanel>
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Label
                            Content="复测次数:  " />
                        <dxe:SpinEdit
                            Value="{Binding RetestTimes,Mode=TwoWay}"
                            Width="50" />
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>