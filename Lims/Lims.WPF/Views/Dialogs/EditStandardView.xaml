<UserControl
    x:Class="Lims.WPF.Views.Dialogs.EditStandardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:local="clr-namespace:Lims.WPF.Views.Dialogs"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="5" />
            <ColumnDefinition
                Width="1.8*" />
        </Grid.ColumnDefinitions>
        <DockPanel>
            <Button
                Content="同步"
                Margin="10,2"
                Height="40"
                DockPanel.Dock="Top"
                Command="{Binding TongbuCommand}" />
            <dxg:GridControl
                ItemsSource="{Binding Products}"
                SelectedItems="{Binding SelectedProducts}"                
                SelectionMode="Row">
                <dxg:GridControl.GroupSummary>
                    <dxg:GridSummaryItem
                        SummaryType="Count"
                        DisplayFormat="样品数量：0" />
                </dxg:GridControl.GroupSummary>
                <dxg:GridControl.View>
                    <dxg:TableView
                        AutoWidth="False"
                        ShowCheckBoxSelectorColumn="True">
                    </dxg:TableView>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        FieldName="Id"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="ExecuteStandard"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="ProductType"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="SampleFormOrState"
                        GroupIndex="2"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="TestItem"
                        GroupIndex="1"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="TestMethodId"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="TestMethod"
                        GroupIndex="0"
                        ReadOnly="True" />
                </dxg:GridControl.Columns>
            </dxg:GridControl>
        </DockPanel>
        <GridSplitter
            Grid.Column="1"
            Background="Red"
            HorizontalAlignment="Stretch" />
        <DockPanel
            Grid.Column="2">
            <StackPanel
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    Content="刷新"
                    Command="{Binding RefreshMethodCommand}"
                    HorizontalAlignment="Left"
                    Height="40"
                    Margin="10,2" />
                <Button
                    Content="编辑标准子项目"
                    Command="{Binding ShowEditStandardSubItemViewCommand}"
                    HorizontalAlignment="Left"
                    Height="40" />
            </StackPanel>

            <dxg:GridControl
                ItemsSource="{Binding Methods}">
                <dxg:GridControl.GroupSummary>
                    <dxg:GridSummaryItem
                        SummaryType="Count"
                        DisplayFormat="样品数量：0" />
                </dxg:GridControl.GroupSummary>
                <dxg:GridControl.View>
                    <dxg:TableView
                        AutoWidth="True"
                        FocusedRow="{Binding FocusedMethod,Mode=TwoWay}"
                        CellValueChangedCommand="{Binding MethodEditCommand}">
                        <dxmvvm:Interaction.Behaviors>
                            <dxmvvm:EventToCommand
                                Command="{Binding StandardKeyUpCommand}"
                                EventName="KeyUp"
                                PassEventArgsToCommand="True" />
                        </dxmvvm:Interaction.Behaviors>
                    </dxg:TableView>
                </dxg:GridControl.View>

                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        FieldName="Id"
                        Width="40"
                        ReadOnly="True" />
                    <dxg:GridColumn
                        FieldName="TestItem" />
                    <dxg:GridColumn
                        FieldName="TestMethod" />
                    <dxg:GridColumn
                        FieldName="Tester" />
                    <dxg:GridColumn
                        FieldName="SampleState" />
                    <dxg:GridColumn
                        FieldName="TestUnit" />
                    <dxg:GridColumn
                        FieldName="RoundRule" />
                </dxg:GridControl.Columns>

            </dxg:GridControl>
        </DockPanel>
    </Grid>
</UserControl>
