<UserControl
    x:Class="Lims.WPF.Views.Dialogs.MySubmittedTaskListPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"    
    xmlns:local="clr-namespace:Lims.WPF.Views.Dialogs"
    mc:Ignorable="d"
    Height="560"
    Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="55*" />
            <ColumnDefinition
                Width="282*" />
        </Grid.ColumnDefinitions>
        <dxg:GridControl
            Name="ItemsGrid"
            MaxHeight="1600"
            AutoExpandAllGroups="True"
            ItemsSource="{Binding TaskListPreviewSources}"
            Grid.ColumnSpan="2">
            <dxg:GridControl.View>
                <dxg:TableView
                    Style="{StaticResource ItemsTableViewStyle}"
                    RowMinHeight="34"
                    AllowEditing="False"
                    VerticalScrollbarVisibility="Visible"
                    Name="ItemsView">
                </dxg:TableView>
            </dxg:GridControl.View>

            <dxg:GridControl.Columns>
                <dxg:GridColumn
                    FieldName="SampleCode"
                    Header="样品编号" />
                <dxg:GridColumn
                    FieldName="TestItem"
                    Header="检测项目" />
                <dxg:GridColumn
                    FieldName="Temp_TestResult"
                    Image="{dx:DXImage 'Images/RichEdit/InsertDataField_32x32.png'}"
                    HeaderStyle="{StaticResource ResultColumnHeaderStyle}"
                    Header="检测结果" />
                <dxg:GridColumn
                    FieldName="ReportUnit"
                    Header="报告单位" />
                <dxg:GridColumn
                    FieldName="RoundRule"
                    Header="修约规则" />
                <dxg:GridColumn
                    FieldName="IndexRequest"
                    Header="指标要求" />
                <dxg:GridColumn
                    FieldName="Temp_SingleConclusion"
                    Header="单项结论" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</UserControl>