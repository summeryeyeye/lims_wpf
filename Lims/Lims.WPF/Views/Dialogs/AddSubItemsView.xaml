<UserControl
    x:Class="Lims.WPF.Views.Dialogs.AddSubItemsView"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    mc:Ignorable="d"
    Height="580"
    Width="880">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="3*" />
            <ColumnDefinition
                Width="2*" />
        </Grid.ColumnDefinitions>
        <ListBox
            SelectedIndex="0"
            SelectedItem="{Binding SelectedStandardSubItem}"
            ItemsSource="{Binding StandardSubItems}"
            Name="type"
            FontSize="14"
            Background="Transparent"
            DisplayMemberPath="Text">
        </ListBox>
        <Border
            BorderThickness="0.5"
            Grid.Column="1"
            BorderBrush="Black" />
        <Grid
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition
                    Height="8*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <DockPanel
                VerticalAlignment="Center">
                <dx:SimpleButton
                    Width="40"
                    Height="40"
                    Glyph="{dx:DXImage 'Images/Actions/AddFile_16x16.png'}"
                    HorizontalAlignment="Left"
                    Margin="5,0"
                    ToolTip="添加标准子项目"
                    Command="{Binding ShowCreatStandardSubItemViewCommand}">
                </dx:SimpleButton>
                <CheckBox
                    x:Name="CheckAllCheckBox"
                    Margin="5,0"
                    HorizontalAlignment="Right"
                    Content="{Binding IsChecked, Converter={StaticResource BooleanToContentConverter},ConverterParameter='全选|全不选', RelativeSource={RelativeSource Mode=Self}}"
                    Command="{Binding CheckAllItemsCommand}">
                    <CheckBox.CommandParameter>
                        <MultiBinding
                            Converter="{StaticResource objectConverter}">
                            <Binding
                                Path="IsChecked"
                                RelativeSource="{RelativeSource Mode=Self}" />
                            <Binding
                                ElementName="SubItemStandardsView"
                                Path="ItemsSource" />
                        </MultiBinding>
                    </CheckBox.CommandParameter>
                </CheckBox>
            </DockPanel>
            <Border
                BorderThickness="0,0,0,1"
                BorderBrush="Red"
                Grid.Row="0" />

            <ItemsControl
                ItemsSource="{Binding ElementName=type, Path=SelectedItem.SubItems, Mode=TwoWay}"
                Grid.Row="1"
                Margin="0,5"
                Name="SubItemStandardsView">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter
                            Property="FrameworkElement.Margin"
                            Value="3" />
                        <Style.Triggers>
                            <Trigger
                                Property="UIElement.IsMouseOver"
                                Value="True">
                                <Setter
                                    Property="FrameworkElement.ToolTip"
                                    Value="{Binding Content.TestItem, RelativeSource={x:Static RelativeSource.Self}}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal">
                            <CheckBox
                                IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                            <Button
                                Content="{Binding TestItem}"
                                Grid.Row="1"
                                FontSize="16"
                                Command="{Binding DataContext.CheckSubItemCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}"
                                CommandParameter="{Binding}" />
                            <Canvas
                                ClipToBounds="True"
                                Grid.RowSpan="2">
                                <Border
                                    Canvas.Top="10"
                                    Canvas.Right="-50"
                                    Width="100"
                                    Height="100"
                                    Background="#FFFFFF"
                                    Opacity="0.1"
                                    CornerRadius="100" />
                                <Border
                                    Canvas.Top="40"
                                    Canvas.Right="-30"
                                    Width="100"
                                    Height="100"
                                    Background="#FFFFFF"
                                    Opacity="0.1"
                                    CornerRadius="100" />
                                <Border
                                    CornerRadius="5" />
                            </Canvas>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.Template>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="ScrollViewer"
                                          Margin="10,0,0,0"
                                          DockPanel.Dock="Right"
                                          CanContentScroll="True"
                                          Focusable="False"
                                          Padding="{TemplateBinding Padding}">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
            <dx:SimpleButton
                Height="40"
                Margin="5,0"
                Grid.Row="2"
                Glyph="{dx:DXImage 'Images/Spreadsheet/TableConvertToRange_16x16.png'}"
                Command="{Binding AddToPreviewSubItemsCommand}"
                CommandParameter="{Binding ElementName=SubItemStandardsView, Path=ItemsSource}">
            </dx:SimpleButton>
        </Grid>

        <DockPanel
            Grid.Column="2">
            <dxg:GridControl
                ItemsSource="{Binding EdittingItem.SubItems, Mode=TwoWay}"
                SelectionMode="MultipleRow">
                <dxg:GridControl.View>
                    <dxg:TableView
                        Style="{StaticResource ItemsTableViewStyle}"
                        RowIndicatorContentTemplate="{StaticResource DefaultIndicatorTemplate}"
                        IndicatorWidth="30"
                        FontSize="14"
                        AllowEditing="False"
                        SelectedRowsSource="{Binding SelectedPreviewSubItems,Mode=TwoWay}"
                        CheckBoxSelectorColumnWidth="40"
                        ShowCheckBoxSelectorColumn="True" />
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        Header="当前项目下子项目"
                        FieldName="TestItem"
                        HorizontalHeaderContentAlignment="Center" />
                </dxg:GridControl.Columns>
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand
                        Command="{Binding PreviewSubItemsKeyUpCommand}"
                        PassEventArgsToCommand="True"
                        EventName="KeyUp" />
                </dxmvvm:Interaction.Behaviors>
            </dxg:GridControl>
        </DockPanel>
    </Grid>
</UserControl>