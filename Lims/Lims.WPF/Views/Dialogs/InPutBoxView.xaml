<UserControl xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:local="clr-namespace:Lims.WPF.Views.Dialogs"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             x:Class="Lims.WPF.Views.Dialogs.InPutBoxView"
             mc:Ignorable="d"
             Height="225"
             Width="400">
    <Grid>

        <dxe:TextEdit  Name="TipTextEdit"
                       TextWrapping="WrapWithOverflow"
                       VerticalContentAlignment="Top"
                       Padding="20"
                       FontSize="16"
                       HorizontalAlignment="Stretch"
                       Text="{Binding InputBoxText,Mode=TwoWay}" />
    </Grid>
</UserControl>