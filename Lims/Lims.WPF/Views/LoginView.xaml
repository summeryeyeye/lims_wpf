<UserControl
    x:Class="Lims.WPF.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    x:Name="LayoutRoot"
    mc:Ignorable="d"
    Height="160"
    Width="360">
    <!--<dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding ShowLoginCommand}"
                               EventName="Loaded"
                               PassEventArgsToCommand="True" />
    </dxmvvm:Interaction.Behaviors>-->

    <UserControl.Resources>
        <Style
            TargetType="dxlc:LayoutItemLabel">
            <Setter
                Property="FontSize"
                Value="14" />
            <Setter
                Property="FontWeight"
                Value="Bold" />
            <Setter
                Property="Margin"
                Value="0 0 15 0" />
        </Style>

        <Style
            TargetType="dxlc:LayoutItem">
            <Setter
                Property="LabelHorizontalAlignment"
                Value="Right" />
            <Setter
                Property="ElementSpace"
                Value="5" />
        </Style>

        <Style
            TargetType="dxe:TextEdit">
            <Setter
                Property="FontSize"
                Value="15" />
            <Setter
                Property="FontWeight"
                Value="DemiBold" />
            <Setter
                Property="Padding"
                Value="5 1" />
            <Setter
                Property="MinWidth"
                Value="120" />
        </Style>

        <Style
            TargetType="dxe:PasswordBoxEdit">
            <Setter
                Property="FontSize"
                Value="15" />
            <Setter
                Property="FontWeight"
                Value="DemiBold" />
            <Setter
                Property="Padding"
                Value="5 1" />
            <Setter
                Property="MinWidth"
                Value="120" />
        </Style>
    </UserControl.Resources>

    <dxlc:LayoutControl
        Header="Header"
        Orientation="Vertical"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        ItemSpace="5"
        UseLayoutRounding="True"
        Margin="5,10"
        Padding="0"
        View="Group">

        <Grid
            Width="220">
            <Image
                Source="/Images/DevExpress-Logo.png"
                Stretch="Uniform"
                Margin="-10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
        </Grid>
        <dxlc:LayoutItem
            Label="账号"
            Margin="0,10">
            <dxe:ComboBoxEdit
                FontSize="16"
                ItemsSource="{Binding LoginedUserIds}"
                HorizontalContentAlignment="Center"
                Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:FocusBehavior
                        SourceName="LayoutRoot"
                        EventName="Loaded"
                        FocusDelay="0:0:0.5" />
                </dxmvvm:Interaction.Behaviors>
            </dxe:ComboBoxEdit>
        </dxlc:LayoutItem>

        <dxlc:LayoutItem
            Label="密码"
            Margin="0,10">
            <dxe:PasswordBoxEdit
                EditValue="{Binding Password, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                BorderThickness="0,0,0,1"
                Background="Transparent"
                HorizontalContentAlignment="Center" />
        </dxlc:LayoutItem>

        <dxlc:LayoutGroup>
            <!--<dxlc:DataLayoutItem Label="记住密码">
                <dxe:CheckEdit IsChecked="{Binding RememberMe}" HorizontalAlignment="Center"/>
            </dxlc:DataLayoutItem>-->
            <dxlc:DataLayoutItem
                Label="自动登录">
                <dxe:CheckEdit
                    IsChecked="{Binding AutoLogin}"
                    HorizontalAlignment="Center" />
            </dxlc:DataLayoutItem>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>